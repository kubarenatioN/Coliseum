<Window x:Class="Kursach.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:local="clr-namespace:Kursach"        
        mc:Ignorable="d"
        x:Name="AppMainWindow"
        Icon="Images/Logos/coliseum.png"
        MinWidth="{Binding WindowMinWidth}"
        MinHeight="{Binding WindowMinHeight}"
        Title="Coliseum" Height="600" Width="1000"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource CustomWindow}"
        >

    <Window.Resources>

        <!-- Add window custom style resource file -->
        <ResourceDictionary Source="Styles/Window.xaml"/>

    </Window.Resources>

    <!-- Specifying WindowChrome Properties -->
    <WindowChrome.WindowChrome>
        <WindowChrome
            ResizeBorderThickness="{Binding ResizeBorderThickness}"
            CaptionHeight="{Binding TitleHeight}"
            GlassFrameThickness="0"
            CornerRadius="0"
            />
    </WindowChrome.WindowChrome>

    <local:MainContentControl/>

</Window>
