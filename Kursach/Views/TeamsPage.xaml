<Page x:Class="Kursach.Views.TeamsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursach"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeamsPage">

    <ScrollViewer Name="scrollViewer">
        <StackPanel>

            <!-- Header -->
            <local:PageHeaderControl 
                HeaderTitle="Teams"
                HeaderSubtitle="Explore all pro-teams"
                BackgroundImage="teams"/>

            <!-- Games grid -->
            <Border
                Padding="10 10">
                <StackPanel>

                    <TextBlock 
                        Text="Teams" 
                        Style="{StaticResource PageSectionTitle}"/>

                    <!-- Display Game Items as grid -->
                    <ItemsControl
                        ItemsSource="{Binding TeamsCollection}"
                        Name="gamesItemsContainer">
                        
                    </ItemsControl>

                </StackPanel>
            </Border>

            <TextBlock Text="Some text" Margin="0 400 0 0"/>
        </StackPanel>
    </ScrollViewer>
</Page>
