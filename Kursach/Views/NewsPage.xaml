<Page x:Class="Kursach.Views.NewsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursach"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <ScrollViewer Name="scrollViewer">
        <StackPanel>

            <!-- Header -->
            <local:PageHeaderControl 
                HeaderTitle="News"
                HeaderSubtitle="All actual cybersport news!"
                BackgroundImage="news"/>

            <!-- News grid -->
            <Border
                Padding="10 10">
                <StackPanel>

                    <TextBlock 
                        Text="Fresh News" 
                        Style="{StaticResource PageSectionTitle}"/>

                    <!-- Display News Items as grid -->
                    <ItemsControl
                        ItemsSource="{Binding ArticlesList}"
                        Style="{StaticResource TileItemsControlSquare}"
                        Name="articlesItemsContainer">
                    </ItemsControl>

                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
